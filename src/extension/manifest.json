{
  "manifest_version": 3,
  "name": "AGI-S: Ghost Protocol",
  "version": "1.0.0",
  "description": "The Browser Daemon for Sovereign Intelligence.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://agi-s-production.vercel.app/*",
      "https://agi-s-demo.vercel.app/*"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AGI-S Status"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
